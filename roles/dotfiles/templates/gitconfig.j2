[user]
  name = {{ git_user_name }}
  email = {{ git_user_email }}
[core]
  pager = delta
  editor = vim
[interactive]
  diffFilter = delta --color-only
[delta]
  features = side-by-side line-numbers decorations
  navigate = true
[delta "decorations"]
  commit-decoration-style = bold yellow box
  file-style = bold yellow ul
  hunk-header-style = omit
[merge]
  conflictstyle = zdiff3
[diff]
  colorMoved = default
[init]
  defaultBranch = main
