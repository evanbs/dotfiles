# Managed by Ansible
alias aliases="cursor ~/.aliases"
alias cl="clear"
alias update="source ~/.zshrc"
alias edit="cursor ~/.zshrc"
alias ws="cd ~/workspace"
alias files="explorer.exe"
alias l="eza --icons=always --color=always --group-directories-first --git --git-repos --long --no-permissions --no-user --no-time --no-filesize"
alias ll="eza --icons=always --color=always --group-directories-first --git --git-repos --long --octal-permissions --header"
alias tree="eza --icons=always --color=always --group-directories-first --tree"
alias http="httpyac"
alias wsl="wsl.exe"

# Docker Aliases
alias d="docker"
alias dc="docker compose"
alias dps="docker ps"
alias dpsa="docker ps -a"
alias dim="docker images"
alias dco="docker container ls"
alias dcoall="docker container ls -a"
alias dvol="docker volume ls"
alias dnet="docker network ls"
alias dlog="docker logs"
alias dlogf="docker logs -f"
alias drm="docker rm"
alias drmi="docker rmi"
alias dstop="docker stop"
alias dstart="docker start"
alias drestart="docker restart"
alias dexec="docker exec -it"
alias dcu="docker compose up -d"
alias dcd="docker compose down"
alias dcb="docker compose build"
alias dck="docker compose kill"