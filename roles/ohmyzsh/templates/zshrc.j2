# Managed by Ansible
export ZSH="$HOME/.oh-my-zsh"

ZSH_THEME="robbyrussell"
plugins=(git you-should-use zsh-autosuggestions history-substring-search zsh-syntax-highlighting)

source $ZSH/oh-my-zsh.sh

# FNM (Fast Node Manager)
eval "$({{ brew_prefix }}/bin/fnm env --use-on-cd)"

# Homebrew
eval "$({{ brew_prefix }}/bin/brew shellenv)"

# SDKMAN
export SDKMAN_DIR="$HOME/.sdkman"
[[ -s "$SDKMAN_DIR/bin/sdkman-init.sh" ]] && source "$SDKMAN_DIR/bin/sdkman-init.sh"

# SDKMAN Java Home (only if Java is installed)
if [ -d "$HOME/.sdkman/candidates/java/current" ]; then
    export JAVA_HOME="$HOME/.sdkman/candidates/java/current"
    export PATH="$JAVA_HOME/bin:$PATH"
elif [ -d "$HOME/.sdkman/candidates/java/17.0.9-tem" ]; then
    export JAVA_HOME="$HOME/.sdkman/candidates/java/17.0.9-tem"
    export PATH="$JAVA_HOME/bin:$PATH"
fi

# Aliases
[[ -f "$HOME/.aliases" ]] && source "$HOME/.aliases"

# Functions
[[ -f "$HOME/.functions" ]] && source "$HOME/.functions"

# Starship prompt
export STARSHIP_CONFIG="$HOME/.config/starship.toml"
eval "$(starship init zsh)"
