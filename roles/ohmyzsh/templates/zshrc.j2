# Managed by Ansible
export ZSH="$HOME/.oh-my-zsh"

# NVM (Node Version Manager)
export NVM_DIR="$HOME/.nvm"
[ -s "$NVM_DIR/nvm.sh" ] && \. "$NVM_DIR/nvm.sh"
[ -s "$NVM_DIR/bash_completion" ] && \. "$NVM_DIR/bash_completion"

# SDKMAN Java Home
export JAVA_HOME="{{ ansible_env.HOME }}/.sdkman/candidates/java/17.0.9-tem"
export PATH="$JAVA_HOME/bin:$PATH"

# Android SDK Home and Tools
export ANDROID_HOME="{{ ansible_env.HOME }}/Android"
export PATH="$PATH:$ANDROID_HOME/emulator"
export PATH="$PATH:$ANDROID_HOME/tools"
export PATH="$PATH:$ANDROID_HOME/tools/bin"
export PATH="$PATH:$ANDROID_HOME/platform-tools"

# Rust/Cargo
[ -f "{{ ansible_env.HOME }}/.cargo/env" ] && source "{{ ansible_env.HOME }}/.cargo/env"

ZSH_THEME="robbyrussell"
plugins=(git you-should-use zsh-autosuggestions history-substring-search zsh-syntax-highlighting)

# Homebrew early to expose brew-installed binaries (eza, starship, etc.)
eval "$({{ brew_prefix }}/bin/brew shellenv)"

source $ZSH/oh-my-zsh.sh

# Aliases
[[ -f "$HOME/.aliases" ]] && source "$HOME/.aliases"

# Functions
[[ -f "$HOME/.functions" ]] && source "$HOME/.functions"

# Starship prompt
export STARSHIP_CONFIG="$HOME/.config/starship.toml"
eval "$(starship init zsh)"